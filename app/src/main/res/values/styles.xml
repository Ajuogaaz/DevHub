<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--<item name="android:windowBackground">@color/Green</item>  -->
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    
    
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="LoginButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/instagram_blue</item>
        <item name="android:background">@drawable/buttontemplate</item>
        <item name="android:textSize">12sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="signButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/Green</item>
        <item name="android:background">@drawable/buttonsigntemplate</item>
        <item name="android:textSize">12sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="logintextstyle" >
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:hint">@string/usernameHint</item>
        <item name="android:textColorHint">@color/Black</item>
        <item name="android:background">@drawable/logintextdrawable</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <dimen name="WidthOfwidgets">25dp</dimen>


</resources>