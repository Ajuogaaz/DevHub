<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height='800dp'
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="50dp"
    card_view:cardElevation="8dp">

    <!-- Main Content View -->
   <RelativeLayout
       android:id="@+id/main_container"
       android:layout_width="match_parent"
       android:layout_marginBottom="50dp"
       android:layout_height="wrap_content">


       <androidx.cardview.widget.CardView
           android:id="@+id/circularContainer"
           android:layout_width="45dp"
           android:layout_height="45dp"
           app:cardCornerRadius="45dp"
           android:layout_marginTop="20dp"
           android:layout_marginStart="20dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           card_view:cardElevation="10dp"
           android:layout_centerVertical="true">

           <ImageView
               android:id="@+id/ivProfileImage"
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="0dp"
               android:layout_marginStart="0dp"
               tools:srcCompat="@tools:sample/avatars" />

       </androidx.cardview.widget.CardView>

       <TextView
           android:id="@+id/tvName"
           android:layout_width="270dp"
           android:layout_marginStart="10dp"
           android:layout_alignTop="@id/circularContainer"
           android:layout_toEndOf="@id/circularContainer"
           android:ems="10"
           android:textStyle="bold"
           android:textColor="@color/Black"
           android:layout_height="wrap_content"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           tools:text="Linus"
           />

       <TextView
           android:id="@+id/gitHubUserName"
           android:layout_width="270dp"
           android:layout_marginStart="10dp"
           android:layout_below="@id/tvName"
           android:layout_toEndOf="@id/circularContainer"
           android:ems="10"
           android:textStyle="bold"
           android:layout_height="wrap_content"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           tools:text="@string/Ajuogaaz"
           />

       <TextView
           android:id="@+id/title"
           android:layout_width="wrap_content"
           android:textColor="@color/Black"
           android:layout_marginTop="20dp"
           android:layout_marginStart="5dp"
           android:layout_below="@id/circularContainer"
           android:layout_height="wrap_content"
           tools:text="@string/AjuogaazTitle"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           android:textStyle="bold"
           />
       <TextView
           android:id="@+id/tvDescription"
           android:layout_width="match_parent"
           android:layout_below="@id/title"
           android:layout_height="wrap_content"
           android:layout_marginStart="5dp"
           android:ellipsize="end"
           android:maxLines="4"
           tools:text="@string/PostBody"
           />
       <ImageView
           android:id="@+id/PostImage"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_below="@id/tvDescription"
           tools:src="@color/Green"
           android:visibility="visible"
           />

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_below="@id/PostImage"
           android:layout_marginTop="-3dp">

           <ImageView
               android:id="@+id/imageView3"
               android:layout_width="36dp"
               android:layout_height="41dp"
               android:layout_marginStart="16dp"
               android:layout_marginTop="24dp"
               app:srcCompat="@drawable/ufi_heart_icon"
               card_view:layout_constraintStart_toStartOf="parent"
               card_view:layout_constraintTop_toTopOf="parent" />

           <ImageView
               android:id="@+id/imageView4"
               android:layout_width="49dp"
               android:layout_height="35dp"
               android:layout_marginStart="24dp"
               app:srcCompat="@android:drawable/stat_notify_chat"
               card_view:layout_constraintStart_toEndOf="@+id/imageView3"
               card_view:layout_constraintTop_toTopOf="@+id/imageView3"
               card_view:srcCompat="?android:attr/textCursorDrawable" />

           <ImageView
               android:id="@+id/imageView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               app:srcCompat="@android:drawable/ic_menu_share"
               card_view:layout_constraintStart_toEndOf="@+id/imageView4"
               card_view:layout_constraintTop_toTopOf="@+id/imageView4" />

           <ImageView
               android:id="@+id/imageView6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="64dp"
               app:srcCompat="@drawable/ufi_save"
               card_view:layout_constraintEnd_toEndOf="parent"
               card_view:layout_constraintHorizontal_bias="0.0"
               card_view:layout_constraintStart_toEndOf="@+id/imageView5"
               card_view:layout_constraintTop_toTopOf="@+id/imageView5" />
       </androidx.constraintlayout.widget.ConstraintLayout>


   </RelativeLayout>


</androidx.cardview.widget.CardView>