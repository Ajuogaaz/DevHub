<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/circularContainer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="35dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvName"
            android:layout_marginTop="5dp"
            android:layout_width="270dp"
            android:layout_marginStart="18dp"
            android:ems="10"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Linus"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:textColor="@color/Black"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Title"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvUserNameDescription"
            android:layout_width="wrap_content"
            android:textColor="@color/Black"
            android:layout_height="wrap_content"
            tools:text="Description23"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            tools:text="Description34"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/post_image"
        tools:srcCompat="@tools:sample/avatars" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLike"
            android:layout_width="@dimen/WidthOfwidgets"
            android:layout_height="@dimen/WidthOfwidgets"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/likeicon"
            app:srcCompat="@drawable/ufi_heart" />

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="@dimen/WidthOfwidgets"
            android:layout_marginEnd="20dp"
            android:layout_height="@dimen/WidthOfwidgets"
            android:contentDescription="@string/comment_icon"
            app:srcCompat="@drawable/ufi_comment" />


        <ImageView
            android:id="@+id/ivSave"
            android:layout_width="@dimen/WidthOfwidgets"
            android:layout_height="@dimen/WidthOfwidgets"
            android:layout_marginStart="230dp"
            android:contentDescription="@string/savepost"
            app:srcCompat="@drawable/ufi_save" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/NumberofActualLikes"
            android:layout_width="wrap_content"
            android:textColor="@color/Black"
            android:layout_height="wrap_content"
            tools:text="23"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/TheNameLikes"
            android:layout_width="match_parent"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Likes"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tvCreatedAt"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="2 hours ago "
        />


</LinearLayout>
